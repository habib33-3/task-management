# Environment settings
NODE_ENV=development  # Set to 'production' in a live environment
PORT=5000             # Port number for the application

# Database connection settings
DB_URL=mongodb://localhost:27017 

# Bcrypt settings
SALT_ROUND=12  # Number of rounds for bcrypt hashing

# JWT settings
ACCESS_TOKEN_SECRET=your_access_token_secret_here  # Replace with a strong secret
ACCESS_TOKEN_EXPIRY=15m  # Access token expires in 15 minutes
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here  # Replace with a strong secret
REFRESH_TOKEN_EXPIRY=30d  # Refresh token expires in 30 days
